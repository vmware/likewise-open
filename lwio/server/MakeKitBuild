DRIVERS="rdr npfs pvfs srv"
SUBDIRS="iomgr smbcommon $DRIVERS lwiod"

driver_enabled()
{
    for _enabled in ${LWIO_DRIVERS}
    do
        [ "$_enabled" = "$1" ] && return 0
    done

    return 1
}

configure()
{
    for _driver in ${DRIVERS}
    do
        driver_enabled "$_driver" || mk_skip_subdir "$_driver"
    done
}

