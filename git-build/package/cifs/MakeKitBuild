MODULES="package-deb package-rpm"

configure()
{
    case "$LW_FEATURE_LEVEL" in
        auth)
            mk_declare -o PRIMARY_SERVICE=lsass
            ;;
        full)
            mk_declare -o PRIMARY_SERVICE=srvsvc
            ;;
    esac

    case "$LW_DEVICE_PROFILE" in
        embedded)
            mk_declare -o IS_EMBEDDED="yes"
            ;;
        *)
            mk_declare -o IS_EMBEDDED="no"
            ;;
    esac

    mk_declare -o \
        MK_BINDIR \
        MK_PREFIX \
        MK_DEBUG \
        MK_ROOT_DIR \
        MK_STAGE_DIR \
        LW_CACHEDIR \
        LW_CONFIGDIR

    if mk_deb_enabled
    then
        mk_declare -o \
            PKG_DEB_NAME="likewise-open-cifs" \
            PKG_DEB_VERSION="${LW_VERSION}-0" \
            PKG_DEB_DATE="`date -R`"
    fi

    if mk_rpm_enabled
    then
        mk_declare -o \
            PKG_RPM_NAME="likewise-open-cifs" \
            PKG_RPM_VERSION="${LW_VERSION}" \
            PKG_RPM_RELEASE="0"

        PKG_RPM_COMPAT="0"

        mk_compat_do
            PKG_RPM_COMPAT="1"
        mk_compat_done

        mk_declare -o PKG_RPM_COMPAT
    fi
}

package_deb()
{
    mk_deb_do \
        PACKAGE="$PKG_DEB_NAME" \
        VERSION="$PKG_DEB_VERSION" \
        DEBIANFILES="debian/changelog.in debian/compat.in \
                     debian/control.in debian/postinst.in \
                     debian/postrm.in debian/preinst.in \
                     debian/prerm.in debian/rules.in"

        common_files
        common_files_compat

        mk_deb_sub_do SUBPACKAGE="dev"
            common_files_dev
        mk_deb_sub_done
    mk_deb_done
}

package_rpm()
{
    mk_rpm_do \
        PACKAGE="$PKG_RPM_NAME" \
        VERSION="$PKG_RPM_VERSION" \
        SPECFILE="rpm/cifs.spec"

        common_files

        if [ "$PKG_RPM_COMPAT" -eq "1" ]
        then
            mk_subpackage_do SUBPACKAGE="compat"
                common_files_compat
            mk_subpackage_done
        fi

        mk_rpm_sub_do SUBPACKAGE="devel"
            common_files_dev
        mk_rpm_sub_done
    mk_rpm_done
}

make()
{
    COMMON_SUBDIRS="\
        @krb5 @cyrus-sasl @openldap @libiconv @sqlite \
        @libuuid @openssl @curl @libxml2 \
        @lwbase @lwmsg @lwreg @lwadvapi @netlogon \
        @lwio @libschannel @dcerpc @centutils @lwsm \
        @eventlog @lsass @reapsysl @lwdns @srvsvc @lwnetapi \
        @lwtools @domainjoin @lwconfig @lwupgrade @samba-interop \
        @config"

    mk_deb_enabled && package_deb
    mk_rpm_enabled && package_rpm
}

lw_use_bundled()
{
    for _dep in ${LW_BUNDLED}
    do
        [ "$_dep" = "$1" ] && return 0
    done

    return 1
}

common_files()
{
    mk_package_patterns \
        SUBDIRS="$COMMON_SUBDIRS" \
        "${MK_BINDIR}/*" \
        "${MK_SBINDIR}/*" \
        "${MK_LIBDIR}/*${MK_LIB_EXT}" \
        "${MK_LIBDIR}/*${MK_LIB_EXT}.*" \
        "${MK_LIBDIR}/*.sys${MK_DLO_EXT}" \
        "${MK_LIBDIR}/liblsass_auth_provider_*${MK_DLO_EXT}" \
        "${MK_LIBDIR}/liblwmapsecurity*${MK_DLO_EXT}" \
        "${MK_LIBDIR}/liblsaaccess*${MK_DLO_EXT}" \
        "${MK_LIBDIR}/lib*_srv${MK_DLO_EXT}" \
        "${MK_LIBDIR}/libsamdb${MK_DLO_EXT}" \
        "${MK_LIBDIR}/sasl2/*${MK_DLO_EXT}.*" \
        "${MK_LIBDIR}/sasl2/*${MK_DLO_EXT}" \
        "${MK_LIBDIR}/gss/*${MK_DLO_EXT}" \
        "${MK_LIBDIR}/lwsm-loader/*${MK_DLO_EXT}" \
        "${MK_DATADIR}/*.glade" \
        "${MK_DATADIR}/*.png" \
        "${NSSDIR}/*" \
        "${PAMDIR}/*" \
        "${LW_CONFIGDIR}/*.reg" \
        "${MK_SYSCONFDIR}/*" \
        "${MK_SYSCONFDIR}/gss/mech" \
        "${MK_PREFIX}/data/VERSION" \
        "${LW_CONFIGDIR}/*" \
        "${LW_CACHEDIR}/*" \
        "${MK_DATADIR}/likewise.pam-auth-update" \
        "/etc/init.d/*" \
        "/etc/krb5.conf.default" \
        "/${MK_LIBDIR##*/}/security/pam_lsass${MK_DLO_EXT}" \
        "/${MK_LIBDIR##*/}/libnss_lsass${MK_DLO_EXT}.*"

    if [ "$MK_DLO_EXT" != "$MK_LIB_EXT" ]
    then
        mk_package_files "${MK_LIBDIR}/*${MK_DLO_EXT}"
    fi

    if lw_use_bundled cyrus-sasl
    then
        mk_package_files \
            "${MK_LIBDIR}/sasl2/*${MK_DLO_EXT}" \
            "${MK_LIBDIR}/sasl2/*${MK_DLO_EXT}.*"
    fi

    mk_get_export ../../domainjoin DJ_GUI_ENABLED

    if [ "$result" = yes ]
    then
        mk_package_files \
            "${MK_DATADIR}/*.glade" \
            "${MK_DATADIR}/*.png"
    fi

    mk_package_dirs \
        "${LW_CACHEDIR}" \
        "${LW_CACHEDIR}/db" \
        "${LW_CACHEDIR}/rpc"
}

common_files_compat()
{
    mk_compat_do
        mk_package_patterns \
            SUBDIRS="$COMMON_SUBDIRS" \
            "${MK_LIBDIR}/*${MK_LIB_EXT}.*" \
            "${NSSDIR}/*" \
            "${PAMDIR}/*"
    mk_compat_done
}

common_files_dev()
{
    mk_package_patterns \
        SUBDIRS="$COMMON_SUBDIRS" \
        "${MK_LIBDIR}/*.la" \
        "*.h" \
        "*.idl"
}
